# =========================================================================
# ENVIRONMENT VARIABLES EXAMPLE
# =========================================================================
#
# INSTRUCTIONS:
# 1. Copy this file to: .env (or .env.local)
# 2. Fill in your ACTUAL values
# 3. .env is in .gitignore (NEVER commit it to git)
#
# This file shows all available environment variables.
# For production, set these in your deployment environment.
# =========================================================================

# ===============================
# Database Configuration
# ===============================
DATABASE_URL=jdbc:postgresql://localhost:5432/Event_Booking_App_db
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=YOUR_ACTUAL_POSTGRES_PASSWORD_HERE

# ===============================
# Keycloak Configuration
# ===============================
KEYCLOAK_SERVER_URL=http://localhost:9090
KEYCLOAK_REALM=event-ticket-platform
KEYCLOAK_CLIENT_ID=event-ticket-platform-app
KEYCLOAK_CLIENT_SECRET=YOUR_ACTUAL_KEYCLOAK_CLIENT_SECRET_HERE
KEYCLOAK_ADMIN_USERNAME=admin
KEYCLOAK_ADMIN_PASSWORD=YOUR_ACTUAL_KEYCLOAK_ADMIN_PASSWORD_HERE

# ===============================
# Application Configuration
# ===============================
SERVER_PORT=8081
SPRING_PROFILES_ACTIVE=dev

# ===============================
# Rate Limiting (Production)
# ===============================
RATE_LIMITING_ENABLED=true
RATE_LIMITING_REQUESTS_PER_MINUTE=1000
RATE_LIMITING_AUTH_REQUESTS_PER_MINUTE=10

# ===============================
# Test Database (Optional)
# ===============================
TEST_DATABASE_URL=jdbc:postgresql://localhost:5432/Event_Booking_App_db_test
TEST_DATABASE_USERNAME=postgres
TEST_DATABASE_PASSWORD=YOUR_TEST_DB_PASSWORD_HERE
